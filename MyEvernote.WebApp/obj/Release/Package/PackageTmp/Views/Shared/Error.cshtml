@using MyEvernote.Entities.Messages 
@using MyEvernote.WebApp.ViewModals
@model ErrorViewModal

@{
    ViewBag.Title = Model.Title;
}

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">@Model.Header</h3>
                </div>
                <div class="panel-body">
                    <div class="text-danger">
                        <h2><span class="glyphicon glyphicon-remove-circle"></span> @Model.Title</h2><hr />
                        <p class="text-justify">
                            @foreach (ErrorMessageObj msg in Model.Items)
                            {
                                @msg.Message<br>
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@{
    string js = string.Empty;
    if (Model.IsRedirecting)
    {
        js = "setTimeout(function() { window.location = '" + Model.RedirectingUrl + "'; }, " + Model.RedirectingTimeOut + ");";
    }
}
<script>
    $(function () {
        @Html.Raw(js);
    });
</script>